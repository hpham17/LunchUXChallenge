<%- model_class = Form -%>
  <div class="container-fluid">
    <div class="page-header">
      <h1>All Forms</h1>
        <table id="forms" class="table table-striped">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:address) %></th>
              <th><%= "Children" %></th>
              <th><%= "Adults" %></th>
              <th><%= model_class.human_attribute_name(:total_household_members) %></th>
              <th><%= model_class.human_attribute_name(:ethnicity) %></th>
              <th><%= model_class.human_attribute_name(:race) %></th>
              <th><%= model_class.human_attribute_name(:ssn) %></th>
              <th><%= "Created At" %></th>
            </tr>
          </thead>
          <tbody>
            <% @forms.each do |t| %>
              <tr>
                <td><%= t.address %></td>
                <td>
                  <% t.children.each do |c| %>
                    <%= c.name %>
                  <% end %>
                </td>
                <td>
                  <% t.adults.each do |a| %>
                    <%= t.name %>
                  <% end %>
                </td>
                <td>
                  <%= t.total_household_members %>
                </td>
                <td>
                  <%= t.ethnicity %>
                </td>
                <td><%= t.race %></td>
                <td><%= t.ssn %></td>
                <td><%= t.created_at.strftime("%d/%m/%y")%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
